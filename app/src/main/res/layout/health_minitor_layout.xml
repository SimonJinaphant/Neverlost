<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/demopro"
        android:id="@+id/prolioPic"
        android:layout_marginTop="24dp"
        android:layout_width="100dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="10dp" />


    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/heartRateValue"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/step"
        android:layout_marginTop="19dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/heartRateButton"
        android:layout_alignEnd="@+id/heartRateButton"
        android:elevation="10dp" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/distanceValue"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/heartRateValue" />

    <ImageButton
        android:layout_height="60dp"
        app:srcCompat="@drawable/heartrate"
        android:id="@+id/heartRateButton"
        android:layout_marginTop="46dp"
        android:layout_width="60dp"
        android:elevation="10dp"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_below="@+id/prolioPic"
        android:layout_alignStart="@+id/prolioPic" />

    <TextView
        android:text="Heart Rate : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView5"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Distance : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/healthevaluation"
        android:layout_marginTop="49dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Overall Evaluation: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="25dp"
        android:layout_alignTop="@+id/prolioPic"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginTop="31dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:text="Health Evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/healthEval"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>