<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="25dp"
        android:layout_alignTop="@+id/prolioPic"
        android:layout_alignStart="@+id/age" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/prolioPic"
        android:layout_marginTop="24dp"
        android:layout_width="100dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:textSize="25dp"
        android:layout_marginStart="54dp"
        android:layout_alignBottom="@+id/prolioPic"
        android:layout_toEndOf="@+id/prolioPic"
        android:layout_marginBottom="18dp" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/heartRateValue"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Heart Rate : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/heartRateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ImageButton
        android:layout_height="60dp"
        app:srcCompat="@drawable/heartrate"
        android:id="@+id/heartRateButton"
        android:layout_marginTop="43dp"
        android:layout_width="60dp"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_below="@+id/prolioPic"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginEnd="18dp" />

</RelativeLayout>