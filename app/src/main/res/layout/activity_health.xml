<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_health"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neverlost.ubc.neverlost.activities.HealthActivity">


    <ImageView
        android:layout_height="120dp"
        app:srcCompat="@mipmap/demopro"
        android:id="@+id/prolioPic"
        android:layout_width="120dp"
        android:layout_marginStart="31dp"
        android:elevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/prolioPic"
        android:layout_alignEnd="@+id/distanceValue"
        android:layout_marginBottom="42dp" />

    <TextView
        android:text="Overall Evaluation: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:layout_above="@+id/healthRatingBar"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/healthRatingBar"
        android:layout_above="@+id/healthEval"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_height="60dp"
        app:srcCompat="@drawable/heartrate"
        android:id="@+id/heartRateButton"
        android:layout_marginTop="15dp"
        android:layout_width="60dp"
        android:elevation="10dp"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_below="@+id/prolioPic"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:text="Heart Rate : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView5"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/stepButton"
        android:layout_toEndOf="@+id/stepButton" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/step"
        android:layout_marginTop="16dp"
        android:id="@+id/stepButton"
        android:elevation="10dp"
        android:layout_below="@+id/heartRateButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/heartRateValue"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Beats/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/heartRateValue"
        android:layout_alignBottom="@+id/heartRateValue"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/distanceValue"
        android:layout_alignBottom="@+id/distanceValue"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/distanceValue"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="Distance : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/stepButton"
        android:layout_toStartOf="@+id/name" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/healthevaluation"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/healthRatingBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Health Evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/healthEval"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/bmrValue"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/distanceValue" />

    <TextView
        android:text="BMR : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/bmrValue"
        android:layout_alignBottom="@+id/bmrValue"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Calories/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="12dp"
        android:layout_alignBaseline="@+id/bmrValue"
        android:layout_alignBottom="@+id/bmrValue"
        android:layout_alignStart="@+id/textView3" />
</RelativeLayout>
